# EditorConfig - https://editorconfig.org
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Rust
[*.rs]
indent_size = 4

# C#
[*.cs]
indent_size = 4

# Python (if any scripts)
[*.py]
indent_size = 4

# Makefiles require tabs
[Makefile]
indent_style = tab

# YAML
[*.{yml,yaml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_size = 2

# Docker
[Dockerfile*]
indent_size = 4
